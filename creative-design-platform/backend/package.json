{
  "name": "creative-design-platform-backend",
  "version": "1.0.0",
  "description": "Backend API for Creative Design Platform - AI-powered advertising design tool",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index-simple.js",
    "dev:full": "nodemon --exec ts-node src/index.ts",
    "dev:debug": "nodemon --exec ts-node --inspect src/index.ts",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:reset": "prisma migrate reset --force"
  },
  "keywords": [
    "design",
    "ai",
    "canvas",
    "advertising",
    "graphics"
  ],
  "author": "Creative Design Platform Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.26.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "ffmpeg-static": "^5.2.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.18.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "puppeteer": "^23.10.0",
    "sharp": "^0.32.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.15",
    "@types/sharp": "^0.32.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
