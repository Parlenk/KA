# Creative Design Platform Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ==============================================
# AI SERVICE API KEYS
# ==============================================

# OpenAI GPT-4 API Key (Required for text generation)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Replicate API Token (Required for Stable Diffusion image generation)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Remove.bg API Key (Optional - for professional background removal)
# Get from: https://www.remove.bg/api
# Note: If not provided, will use local rembg model
REMOVEBG_API_KEY=your_removebg_api_key_here

# DeepL API Key (Optional - for high-quality translation)
# Get from: https://www.deepl.com/pro-api
# Note: If not provided, translation features will be disabled
DEEPL_API_KEY=your_deepl_api_key_here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL (for application data)
DATABASE_URL=postgresql://kreativo:kreativo_dev_pass@localhost:5432/kreativo_ads

# MongoDB (for design documents and assets)
MONGODB_URI=mongodb://kreativo:kreativo_dev_pass@localhost:27017/kreativo_designs

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# ==============================================
# STORAGE CONFIGURATION
# ==============================================

# Storage type: 'local' for development, 's3' for production
STORAGE_TYPE=local

# S3/MinIO Configuration (for file storage)
S3_BUCKET=kreativo-assets
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=kreativo
AWS_SECRET_ACCESS_KEY=kreativo_dev_pass

# For production AWS S3, use:
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Server configuration
BACKEND_PORT=3000
AI_SERVICE_PORT=8000
FRONTEND_PORT=5173

# Frontend URLs
VITE_API_URL=http://localhost:3000
VITE_AI_SERVICE_URL=http://localhost:8000

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# JWT Secret (change for production)
JWT_SECRET=your_jwt_secret_key_change_in_production

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================

# Stable Diffusion model
STABLE_DIFFUSION_MODEL=stable-diffusion-xl-base-1.0

# Image generation limits
MAX_IMAGE_SIZE=2048
MAX_BATCH_SIZE=4

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Debug mode
DEBUG=true

# Hot reload
HOT_RELOAD=true

# ==============================================
# GETTING STARTED
# ==============================================

# 1. Copy this file to .env:
#    cp .env.example .env

# 2. Get your API keys:
#    - OpenAI: https://platform.openai.com/api-keys
#    - Replicate: https://replicate.com/account/api-tokens
#    - Remove.bg (optional): https://www.remove.bg/api
#    - DeepL (optional): https://www.deepl.com/pro-api

# 3. Update the API keys in this file

# 4. Start the development environment:
#    docker-compose up -d

# 5. Test the AI service:
#    cd ai-service && python test_service.py

# ==============================================
# PRODUCTION NOTES
# ==============================================

# For production deployment:
# 1. Change all default passwords
# 2. Use strong JWT_SECRET
# 3. Configure proper S3 credentials
# 4. Set DEBUG=false
# 5. Use production database URLs
# 6. Enable HTTPS/TLS
# 7. Configure monitoring and logging